{
  "root": true,
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "require": true,
    "module": true
  },
  "extends": ["eslint:recommended"],
  "plugins": [],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "lines-around-comment": "off",
    "max-len": ["error", { "code": 120 }]
  }
}
